<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Bundle\Sonata\PageBundle\Entity\BaseBlock">

        <field name="type"          type="string"     column="type" length="64" />
        
        <field name="settings"      type="array"      column="settings" />

        <field name="enabled"       type="boolean"    column="enabled" nullable="true" default="false"/>
        <field name="position"      type="integer"    column="position" nullable="true"/>

        <field name="created_at"    type="datetime"   column="created_at" />
        <field name="updated_at"    type="datetime"   column="updated_at" />


        <many-to-one
            field="parent"
            target-entity="Application\PageBundle\Entity\Block"
            inverted-by="children"
            orphan-removal="false">

            <cascade>
                <cascade-all />
            </cascade>

            <join-columns>
                <join-column
                    name="parent_id"
                    referenced-column-name="id"
                    on-delete="CASCADE"
                />
            </join-columns>
        </many-to-one>

        <one-to-many
            field="children"
            target-entity="Application\PageBundle\Entity\Block"
            mapped-by="parent"
            orphan-removal="false"
            fetch="LAZY">

            <cascade>
                <cascade-persist/>
            </cascade>

            <join-columns>
                <join-column
                    name="id"
                    referenced-column-name="parent_id"
                />
            </join-columns>

            <order-by>
                <order-by-field name="position" direction="ASC" />
            </order-by>

        </one-to-many>

        <many-to-one
            field="page"
            target-entity="Application\PageBundle\Entity\Page"
            inverted-by="blocs"
            >

            <cascade>
                <cascade-persist/>
            </cascade>
            
            <join-columns>
                <join-column
                    name="page_id"
                    referenced-column-name="id"
                />
            </join-columns>
        </many-to-one>

    </mapped-superclass>
</doctrine-mapping>
