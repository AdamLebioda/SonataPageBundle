<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sonata_page_esi_cache" pattern="/sonata/page/cache-esi">
        <default key="_controller">SonataPageBundle:Cache:esi</default>
    </route>

    <route id="sonata_page_js_cache" pattern="/sonata/page/cache-js">
        <default key="_controller">SonataPageBundle:Cache:js</default>
    </route>

    <route id="sonata_page_apc_cache" pattern="/sonata/page/cache-apc/{token}">
        <default key="_controller">SonataPageBundle:Cache:apc</default>
    </route>
</routes>
