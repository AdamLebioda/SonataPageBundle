{% extends 'SonataPageBundle:Block:block_base.html.twig' %}

{% block block %}
    {% if settings.title %}<h3>{{ settings.title }}</h3>{% endif %}

    <ul>
        {% if page %}
            {% for child in page.children %}
                <li><a href="{{ child.slug }}" title="{{ child.name|escape }}">{{ child.name }}</a></li>
            {% endfor %}
        {% endif %}
    </ul>
{% endblock %}
