{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block actions %}
    <div class="sonata-actions">
        <ul>
            {% if admin.isGranted('CREATE')%}
                <li class="btn sonata-action-element"><a href="{{ admin.generateUrl('create') }}">{% trans from 'SonataAdminBundle' %}link_action_create{% endtrans %}</a></li>
            {% endif %}

            {% if admin.isGranted('EDIT')%}
                <li class="btn sonata-action-element"><a href="{{ admin.generateUrl('snapshots') }}">{% trans from 'SonataAdminBundle' %}link_action_snapshot{% endtrans %}</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
