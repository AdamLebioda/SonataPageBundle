{% extends 'PageBundle:BlockAdmin:edit.twig' %}

{% block block %}

    <div>
        {{ form.settings.action|render_label }} <br />
        {{ form.settings.action|render(['class' : 'title']) }}
        {{ form.settings.action|render_errors }}
    </div>

    <h2>{% trans 'title_parameters' from 'PageBundle' %}</h2>
    <table>
        {% for parameter in form.settings.parameters %}

                <tr>
                    <td>{{ parameter|render_label }}</td>
                    <td>{{ parameter|render(['class' : 'title']) }} {{ parameter|render_errors }}</td>
                </tr>
        {% endfor %}
    </table>
{% endblock %}